


<h1 class="head-title-form"> Commands History</h1>
  <div class="container">
    <% if !notice.nil? %>
    <p id="notice" class="notice-good"><%= notice %></p>
    <% end %>
    <div class="table-responsive">
    <table class="table table-sm">
    <thead>
      <tr>
        <th>NÂº</th>
        <th>User</th>
        <th>Table</th>
        <th>Amount</th>
        <th>Paid</th>
        <th>Date</th>
        <!--
        <th colspan="3"></th>
        -->
      </tr>
    </thead>

    <tbody>
      <% @commands.each do |command| %>
        <tr>
          <td><%= command.id %></td>
          <td><%= command.user.name.to_s+" "+command.user.surnames.to_s %></td>
          <td><%= command.table.number %></td>
          <td><%= command.amount %></td>
          <td><%= command.paid %></td>
          <td><%= command.created_at %></td>
          <!--
          <td><%= link_to 'Show', command,class:"btn btn-default btn-sm" %></td>
          <td><%= link_to 'Edit', edit_command_path(command),class:"btn btn-default btn-sm" %></td>
          <td><%= link_to 'Destroy', command, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-default btn-sm" %></td>
          -->
        </tr>
      <% end %>
    </tbody>
  </table>
  <div>
</div>
