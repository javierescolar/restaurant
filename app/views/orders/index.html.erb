


<h1 class="head-title-form"> Orders</h1>
  <div class="container">
    <% if !notice.nil? %>
    <p id="notice" class="notice-good"><%= notice %></p>
    <% end %>

<div class="table-responsive">
    <table class="table table-sm">
    <thead>
      <tr>
        <th>NÂº</th>
        <th>User</th>
        <th>Table</th>
        <th>Amount</th>
        <th>Paid</th>
        <th>Date</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.user.name.to_s+" "+order.user.surnames.to_s %></td>
          <td><%= order.table.number %></td>
          <td><%= order.amount %></td>
          <td><%= order.paid %></td>
          <td><%= order.created_at %></td>
          <td><%= link_to 'Show', order,class:"btn btn-default btn-sm" %></td>
          <td><%= link_to 'Edit', edit_order_path(order),class:"btn btn-default btn-sm" %></td>
          <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-default btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
  <br>
  <% if flash[:notice_tables] %>
  <p style="color:red"><%= flash[:notice_tables]%></p>
  <% else %>
  <%= link_to 'New Order', new_order_path, class: "font_size_no_p" %>
  <% end %>
</div>
