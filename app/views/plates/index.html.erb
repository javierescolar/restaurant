

<h1 class="head-title-form"> Dishes</h1>
  <div class="container">
    <% if !notice.nil? %>
    <p id="notice" class="notice-bad"><%= notice %></p>
    <% end %>
    <% if (flash[:notice_bad])  %>
    <p id="notice_bad" class="notice-bad"><%= flash[:notice_bad] %></p>
    <% end %>
    <div class="row">

    <div class="col-md-12 col-xs-12">
      <%= form_tag("/platesFilterCategory", method: "get") do %>
        <%= select_tag(:category_selection ,options_for_select(@categories.map{ |c| [c.name, c.id ]}),{include_blank: "Select category filter", onchange: "this.form.submit()", class: 'form-control form-control-sm'}) %>
      <% end %>
    </div>
    <br><br>

  <% @plates.each do |plate| %>
    <div class="col-md-3 col-xs-12 float_left_plates">
      <div class="row">
        <div class="col">
          <h3 class="title_plate_menu text-center">NÂº<%= plate.id %>: <%= plate.name %></h3>
          <%= image_tag(plate.photo, :alt => "logo",  class:"images_plates_menu img-fluid") %>
        </div>
      </div>
      <div class="row">

      </div>
      <div class="row">
        <div class="col">
          <%= link_to 'Show', plate ,class: "btn btn-default btn-sm col-12" %>
        </div>
        <div class="col">
            <%= link_to 'Edit', edit_plate_path(plate),class: "btn btn-default btn-sm col-12" %>
        </div>
        <div class="col">
            <%= link_to 'Destroy', plate, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-default btn-sm col-12" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


</div>

<div class="row footer">
  <div class="col-md-12 col-xs-12">
    <div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false,:page_links => false %>
  </div>
  </div>
</div>
