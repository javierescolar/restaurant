<h1 class="head-title-form"> Products</h1>
<div class="container">
  <% if !notice.nil? %>
  <p id="notice" class="notice-good"><%= notice %></p>
  <% end %>
  <% if (flash[:notice_bad])  %>
  <p id="notice_bad" class="notice-bad"><%= flash[:notice_bad] %></p>
  <% end %>
  <div class="table-responsive">
  <table class="table table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Unit</th>
      <th>Stock</th>
      <th>Price (â‚¬ Stock)</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.unit_measure %></td>
        <td><%= product.stocks.sum('quantity') %></td>
        <td><%= product.stocks.sum('quantity') * product.price %></td>
      <!--  <td><%= link_to 'Show', product,class:"btn btn-default btn-sm" %></td> -->
        <td><%= link_to 'Edit', edit_product_path(product),class:"btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-default btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Product', new_product_path, class: "font_size_no_p" %>
