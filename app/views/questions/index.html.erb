<h1 class="head-title-form"> questions</h1>
<div class="container">
  <% if !notice.nil? %>
  <p id="notice" class="notice-good"><%= notice %></p>
  <% end %>
  <% if (flash[:notice_bad])  %>
  <p id="notice_bad" class="notice-bad"><%= flash[:notice_bad] %></p>
  <% end %>
  <div class="table-responsive">
  <table class="table table-sm">
  <thead>
    <tr>
      <th>Product</th>
      <th>Text question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.product.name %></td>
        <td><%= question.text_question %></td>
        <td><%= link_to 'Show', question,class:"btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_question_path(question),class:"btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-default btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Question', new_question_path, class: "font_size_no_p" %>
